<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <welcome-file-list>  
   <welcome-file>/WEB-INF/pages/sign-in.jsp</welcome-file>  
  </welcome-file-list>
  <!-- ///////////////Dash Controller/////////////// -->
 
  <servlet>
  	<servlet-name>dashboardController</servlet-name>
  	<display-name>dashboardController</display-name>
  	<description>dashboard view requests</description>
  	<servlet-class>com.apassingment.bumblebee.controller.dashboardController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>dashboardController</servlet-name>
  	<url-pattern>/dashBoard</url-pattern>
  </servlet-mapping>
  
  <!-- ///////////////LoginController/////////////// -->
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<display-name>LoginController</display-name>
  	<description>Login requests</description>
  	<servlet-class>com.apassingment.bumblebee.controller.LoginController</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
  	<servlet-name>LoginController</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
   <!-- ///////////////RegisterController/////////////// -->
  <servlet>
  	<servlet-name>RegisterController</servlet-name>
  	<display-name>RegisterController</display-name>
  	<description>register requests</description>
  	<servlet-class>com.apassingment.bumblebee.controller.RegisterController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>RegisterController</servlet-name>
  	<url-pattern>/user-register</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>RegisterController</servlet-name>
  	<url-pattern>/user-profile</url-pattern>
  </servlet-mapping>
  
  
   <!-- ///////////////user/////////////// -->
   
  <servlet>
  	<servlet-name>UserController</servlet-name>
  	<display-name>UserController</display-name>
  	<description>user requests</description>
  	<servlet-class>com.apassingment.bumblebee.controller.UserController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/user-List</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/save</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  
</web-app>
 